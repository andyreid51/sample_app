<% if @user.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      The form contains <%= pluralize(@user.errors.count, "error") %>.
    </div>
    <ul class="form-group has-error">
    <% @user.errors.full_messages.each do |msg| %>
      <li class="help-block">* <%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>