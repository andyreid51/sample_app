<% provide(:title, 'All comments') %>
<div class="page-header">
  <h3><i class="fa fa-comments-o"></i> All comments</h3>
</div>

<table class="table table-striped table-bordered" id="users">
<thead>	
	<tr>
		<th>Comment Description</th>		
		<th>Edit</th>
		<th>Delete</th>
	</tr>
</thead>
<tbody>
<% @comments.each do |comment| %>
	<tr>
		<td><%= comment.comment_description %></td>
		<td class="text-center"><%= link_to edit_comment_path(comment), class: "btn btn-primary btn-xs"  do %><i class="fa fa-pencil-square-o"></i><% end %></td>
		<td class="text-center">
			<%= link_to comment, method: :delete, data: { confirm: "Please confirm you want to delete " + comment.comment_description},
				  class: "btn btn-danger btn-xs" do %>
				<i class="fa fa-trash-o"></i><% end %>
		</td>
	</tr>
<% end %>