<% provide(:title, 'Create Comment') %>
<div class="page-header">
  <h3><i class="fa fa-pencil-square-o"></i> Create New Comment</h3>
</div>

<div class="row">
    <div class="col-lg-6">
      <div class="panel panel-default">
        <div class="panel-body">        
        <%= bootstrap_form_for(@comment) do |f| %>
          <%= f.text_field :comment_description %>
        </div>
        <div class="panel-footer text-right">
          <%= f.submit "Create Comment", class: "btn btn-primary" %>
          <%= link_to "Cancel", comments_path, class: "btn btn-danger" %>
        </div>
        <% end %>
      </div>
  </div>
</div>  
