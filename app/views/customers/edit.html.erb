<% provide(:title, 'Edit customer') %>
<div class="page-header">
  <h3><i class="fa fa-user"></i> Update customer</h3>
</div>

<div class="row">
    <div class="col-lg-6">
      <div class="panel panel-default">
        <div class="panel-body">        
        <%= bootstrap_form_for(@customer) do |f| %>
          <%= f.text_field :acc_code %>
          <%= f.text_field :acc_name %>
        </div>
        <div class="panel-footer text-right">
          <%= f.submit "Save changes", class: "btn btn-primary" %>
          <%= link_to "Cancel", customers_path, class: "btn btn-danger" %>
        </div>
        <% end %>
      </div>
  </div>
</div>  
