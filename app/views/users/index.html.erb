<% provide(:title, 'All users') %>
<div class="page-header">
  <h3><i class="fa fa-users"></i> All users</h3>
</div>

<table class="table table-striped table-bordered" id="users">
<thead>	
	<tr>
		<th>User Name</th>
		<th>Email</th>
		<th>Job Title</th>
		<th>Role</th>		
		<th>Edit</th>
		<th>Delete</th>
	</tr>
</thead>
<tbody>
<% @users.each do |user| %>
	<tr>
		<td><%= user.name %></td>
		<td><%= user.email %></td>
		<td><%= user.job_title %></td>
		<td><%= user.role.name %></td>
		<td class="text-center"><%= link_to edit_user_path(user), class: "btn btn-primary btn-xs"  do %><i class="fa fa-pencil-square-o"></i><% end %></td>
		<td class="text-center">
		<% if !current_user?(user) %>
			<%= link_to user, method: :delete, data: { confirm: "Please confirm you want to delete " + user.name},
				  class: "btn btn-danger btn-xs" do %>
				<i class="fa fa-trash-o"></i><% end %>
		<% end %>
		</td>
	</tr>
<% end %>
</table>
