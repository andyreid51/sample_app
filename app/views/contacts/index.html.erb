<% provide(:title, @carrier.name) %>
<div class="page-header">
	<h3><i class="fa fa-truck"></i> <%= "#{@carrier.name} - Contacts" %></h3>
</div>

	<%= link_to "New Contact", new_carrier_contact_path(@carrier), class: "btn btn-info" %><br>
	<br>
	<table class="table table-striped table-bordered" id="contacts">
	<thead>	
		<tr>
			<th>First Name</th>
			<th>Last Name</th>		
			<th>Email</th>
			<th>Send Email</th>
			<th>Edit</th>
			<th>Delete</th>
		</tr>
	</thead>
	<tbody>
	<%	@contacts.each do |contact| %>
		<tr>
			<td><%= contact.first_name %></td>
			<td><%= contact.last_name %></td>
			<td><%= contact.email %></td>
			<td><%= contact.email_notification %></td>
			<td class="text-center"><%= link_to edit_carrier_contact_path(@carrier, contact), class: "btn btn-primary btn-xs"  do %><i class="fa fa-pencil-square-o"></i><% end %></td>
			<td class="text-center"><%= link_to [@carrier, contact], method: :delete, data: { confirm: "Please confirm you want to delete " + contact.first_name + " " + contact.last_name},
				  class: "btn btn-danger btn-xs" do %>
				<i class="fa fa-trash-o"></i><% end %></td>
		</tr>
	<% end %>
	</table>
