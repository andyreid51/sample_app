<% provide(:title, 'All carriers') %>
<div class="page-header">
  <h3><i class="fa fa-truck"></i> All carriers</h3>
</div>

<table class="table table-striped table-bordered" id="users">
<thead>	
	<tr>
		<th>Carrier Name</th>
		<th>Contacts</th>		
		<th>Edit</th>
		<th>Delete</th>
	</tr>
</thead>
<tbody>
<% @carriers.each do |carrier| %>
	<tr>
		<td><%= carrier.name %></td>
		<td class="text-center"><%= link_to carrier_contacts_url(carrier), class: "btn btn-primary btn-xs"  do %><i class="fa fa-user"></i><% end %>
		</td>
		<td class="text-center"><%= link_to edit_carrier_path(carrier), class: "btn btn-primary btn-xs"  do %><i class="fa fa-pencil-square-o"></i><% end %>
		</td>
		<td class="text-center">
			<%= link_to carrier, method: :delete, data: { confirm: "Please confirm you want to delete " + carrier.name},
				  class: "btn btn-danger btn-xs" do %>
				<i class="fa fa-trash-o"></i><% end %>
		</td>
	</tr>
<% end %>
</table>