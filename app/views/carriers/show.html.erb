<% provide(:title, @carrier.name) %>
<div class="page-header">
  <h3><i class="fa fa-truck"></i> Carrier profile</h3>
</div>

<%= link_to "New Contact", contact_new_path, class: "btn btn-primary" %>
<table class="table table-striped" id="contacts">
<thead>	
	<tr>
		<th>First Name</th>
		<th>Last Name</th>
		<th>Email</th>
		<th>Send Notification</th>		
		<th>Edit</th>
		<th>Delete</th>
	</tr>
</thead>
<tbody>
<% @contacts.each do |contact| %>
	<tr>
		<td><%= contact.first_name %></td>
		<td><%= contact.last_name %></td>
		<td><%= contact.email %></td>
		<td><%= contact.email_notificatio %></td>
		<td><p><%= link_to edit_contact_path(contact), class: "btn btn-primary btn-xs"  do %><i class="fa fa-pencil-square-o"></i><% end %></p>
		</td>
		<td>
			<p><%= link_to contact, method: :delete, data: { confirm: "Please confirm you want to delete " + contact.name},
				  class: "btn btn-danger btn-xs" do %>
				<i class="fa fa-trash-o"></i><% end %></p>
		</td>
	</tr>
<% end %>