<% provide(:title, 'Edit carrier') %>
<div class="page-header">
  <h3><i class="fa fa-truck"></i> Update carrier</h3>
</div>

<div class="row">
    <div class="col-lg-6">
      <div class="panel panel-default">
        <div class="panel-body">        
        <%= bootstrap_form_for(@carrier) do |f| %>
          <%= f.text_field :name %>
        </div>
        <div class="panel-footer text-right">
          <%= f.submit "Save changes", class: "btn btn-primary" %>
          <%= link_to "Cancel", carriers_path, class: "btn btn-danger" %>
        </div>
        <% end %>
      </div>
  </div>
</div>  
