<% provide(:title, 'Edit MPI status') %>
<div class="page-header">
  <h3><i class="fa fa-flag"></i> Update MPI status</h3>
</div>

<div class="row">
  <div class="col-lg-6">
    <%= bootstrap_form_for(@npiStatus) do |f| %>
      <div class="panel panel-default">
        <div class="panel-body">        
          <%= f.text_field :name %>
        </div>
        <div class="panel-footer text-right">
          <%= f.submit "Save changes", class: "btn btn-primary" %>
          <%= link_to "Cancel", npi_statuses_path, class: "btn btn-danger" %>
        </div>
      </div>
    <% end %>
  </div>
</div>  
